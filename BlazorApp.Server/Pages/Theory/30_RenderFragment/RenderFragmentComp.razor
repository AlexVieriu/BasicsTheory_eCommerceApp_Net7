@page "/renderfragment"

@inject IPersonRepository personRepo

<RenderFragmentChildComp Items="Persons">
    <Header>
        <h4>Fecundatie ca titlu</h4>
    </Header>

    <ListOfPersons>
            <p>Id: @context.Id</p>
            <p>Email: @context.Email</p>
            <p>FullName: @context.FullName</p>
            <p>EmployeeNumber: @context.EmployeeNumber</p>
    </ListOfPersons>

    <Footer>
        <h4>Fecundatie ca footer</h4>
    </Footer>
</RenderFragmentChildComp>

@code {
    private List<Person> Persons = new();

    protected override void OnInitialized()
    {
        Persons = personRepo.GetPersonsByFilter();
    }
}